<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InsertData</servlet-name>
        <servlet-class>Application.InsertData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>Application.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>SessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDeposit</servlet-name>
        <servlet-class>Application.ServletDeposit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletWithdrwal</servlet-name>
        <servlet-class>Application.ServletWithdrwal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletStatement</servlet-name>
        <servlet-class>Application.ServletStatement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferServlet</servlet-name>
        <servlet-class>Application.TransferServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertData</servlet-name>
        <url-pattern>/InsertData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/SessionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeposit</servlet-name>
        <url-pattern>/ServletDeposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletWithdrwal</servlet-name>
        <url-pattern>/ServletWithdrwal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletStatement</servlet-name>
        <url-pattern>/ServletStatement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferServlet</servlet-name>
        <url-pattern>/TransferServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
